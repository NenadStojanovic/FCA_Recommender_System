@model MovieViewModel
@{
    ViewData["Title"] = "Movie";
    Layout = "~/Views/Shared/_AdminLTELayout.cshtml";
}

<h2>Movie</h2>
<div class="row">
    <div class="col-md-3">
        <img id="logo" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22200%22%20height%3D%22200%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20200%20200%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_169d4876154%20text%20%7B%20fill%3Argba(255%2C255%2C255%2C.75)%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A10pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_169d4876154%22%3E%3Crect%20width%3D%22200%22%20height%3D%22200%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2274.4375%22%20y%3D%22104.55625%22%3E%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" alt="300x300" class="img-thumbnail" style="width: 300px; height: 350px;" />
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-10">
                <h2 class="no-margin text-primary">@Model.Movie.Name</h2>
                <p class="no-margin">@Model.Movie.Director</p>
            </div>
        </div>
        <hr style="margin-top: 5px;" />
        <div class="row">
            <div class="col-md-12">
                @Model.Movie.Abstract
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <h4>Movie categories</h4>
        @foreach (var category in Model.Categories)
        {
            <span class="badge bg-blue">@category.Title</span>
        }
    </div>
</div>

@section scripts {
    <script>

        $.ajax({
            url: "https://api.themoviedb.org/3/search/movie",
            data: {
                api_key: "bfeeff106cd2938769ad5341b42337d3",
                region: 'US',
                query: "@Html.Raw(Model.Movie.Name.Remove(Model.Movie.Name.IndexOf("(")))",
                page: 1
            },
            method: 'GET',
            dataType: 'jsonp',
            start_time: new Date().getTime(),
            success: function (response) {
                console.debug(response);
                var movies = response.results;
                var firstResult = movies[0];
                $("#logo").attr("src", "https://image.tmdb.org/t/p/w300/" + firstResult.poster_path)
            },
            error: function (response) {
                $("#logo").css("background: red;")
            }
        });
    </script>
}

